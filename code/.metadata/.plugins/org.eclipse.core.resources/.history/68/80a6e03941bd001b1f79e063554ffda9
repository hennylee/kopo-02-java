		int cTotal = 0;
		int dTotal = 0;
		
		int aCnt = 0;
		int bCnt = 0;
		int cCnt = 0;
		int dCnt = 0;
		
		while(true) {
			if(aCnt == 10) {
				
			}
			
			
			
			if(aCnt + bCnt + cCnt + dCnt == 40) break;
		}
		
		Scanner sc = new Scanner(System.in);
		
		// 콜센터 4개 선택
		System.out.print("콜센터를 선택하세요 : ");
		int call = Integer.parseInt(sc.next());
		
		int donation = getDonation();
		
		switch(call) {
		case 1:
			aCnt++;
			aTotal += donation;
			break;
		case 2:
			bCnt++;
			bTotal += donation;
			break;
		case 3:
			cCnt++;
			cTotal += donation;
			break;
		case 4:
			dCnt++;
			dTotal += donation;
			break;
		}
		
		System.out.println(call + "번 콜센터 : " + donation);
		
		
		
		
		
