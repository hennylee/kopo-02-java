package kr.ac.kopo.day18;

import java.io.BufferedReader;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.io.OutputStream;
import java.net.ServerSocket;
import java.net.Socket;

public class EchoServerMain {
	public static void main(String[] args) {
		try {
			ServerSocket server = new ServerSocket(10001);
			
			Socket client = server.accept();  // 클라이언트의 접속 기다리기
			System.out.println("접속한 클라이언트 이름 : " + client.getInetAddress().getHostAddress());
			
			
			// 1. 클라이언트에서 전송한 데이터를 수신할 수 있는 객체 
			InputStream is = client.getInputStream();
			InputStreamReader isr = new InputStreamReader(is);
			BufferedReader br = new BufferedReader(isr); // 속도를 빠르게 함
			
			
			// 2. 수신한 데이터를 클라이언트에 재전송할 객체
			OutputStream os = client.getOutputStream();
			
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
}
